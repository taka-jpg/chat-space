.main-chat__message-list__comment-box{data: {message: {id: message.id}}}
  .main-chat__message-list__comment-box__name-box
    .main-chat__message-list__comment-box__name-box__name
      = message.user.name
    .main-chat__message-list__comment-box__name-box__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__comment-box__comment
    .main-chat__message-list__comment-box__comment__text
      = message.content
    = image_tag message.image.url, class: 'main-chat__message-list__comment-box__comment__image' if message.image.present?